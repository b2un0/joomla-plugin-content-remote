<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="content" method="upgrade">
    <name>Content - Remote</name>
    <author>Branko Wilhelm</author>
    <creationDate>Jul 2013</creationDate>
    <copyright>Copyright (C) 2013 - 2014 Branko Wilhelm</copyright>
    <license>GNU/GPLv3 http://www.gnu.org/licenses/gpl-3.0.html</license>
    <authorEmail>branko.wilhelm@gmail.com</authorEmail>
    <authorUrl>www.z-index.net</authorUrl>
    <version>@REVISION@</version>
    <description>include remote content into a article/module or else where content plugins used. usage: {remote FULL_URL}</description>
    <files>
        <filename plugin="remote">remote.php</filename>
    </files>
    <scriptfile>script.installer.php</scriptfile>
    <updateservers>
        <server type="collection" priority="1" name="z-index development">http://www.z-index.net/en/extensions.xml</server>
    </updateservers>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="cache_time" type="text" filter="integer" default="60" size="5" required="true" label="Caching Time" description="in Minutes" />
            </fieldset>
        </fields>
    </config>
</extension>